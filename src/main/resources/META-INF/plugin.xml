<idea-plugin>
    <id>com.liferay.project-reference-replacer</id>
    <name>Liferay Project Reference Replacer</name>
    <vendor email="dante.wang@liferay.com" url="https://github.com/dantewang">Dante Wang</vendor>

    <description><![CDATA[
IntelliJ plugin to automatically replace artifact references of portal-kernel, etc. in Gradle imported modules with module references.
    ]]></description>

    <depends>org.jetbrains.plugins.gradle</depends>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="org.jetbrains.plugins.gradle">
        <projectResolve implementation="com.liferay.project.reference.replacer.GradleDependencyReplacer" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>